<div class="off-canvas-wrap" x-ng-controller='ListsCtrl'>
    <div class="inner-wrap">
        <nav class="tab-bar">
            <section class="left-small">
                <a class="left-off-canvas-toggle menu-icon" ><span></span></a>
            </section>

            <section class="middle tab-bar-section">
                <!-- <h1 class="title">OffCanvas</h1> -->
                <nav class="top-bar" data-topbar>
                  <ul class="title-area">
                    <li class="name">
                      <h1 class="title">OMGNeed</h1>
                    </li>
                  </ul>
                <ul class="right">
                  <li class="has-form">
                    <div class="row collapse">
                      <%= form_tag users_path, :method => 'get' do %>
                      <div class="large-8 small-9 columns">
                        <%= text_field_tag :search, params[:search], placeholder: "search" %>
                      </div>
                      <div class="large-4 small-3 columns">
                        <%= submit_tag "Search", :name => nil, class: "button expand" %>
                      </div>
                      <% end %>
                    </div>
                  </li>
                </ul> 
                <ul class="left">
                  <li>
                   <a class="button dropdown" dropdown-toggle="#dropdown-example-2">New list</a>
                    <ul id="dropdown-example-2" data-dropdown-content class="f-dropdown content">
                      <li class="has-form">
                        
                          <form ng-submit="saveList();">        
                          <input ng-model="newList.name" placeholder="List Name" autofocus>
                          <input type="submit" value="Add New List!">
                          </form>
                        
                      </li>
                    </ul>
                  </li>
                </ul>





                
                
               
                </nav>           
            </section>

            < /br>

            <section class="right-small">
                <a class="right-off-canvas-toggle menu-icon" ><span></span></a>
            </section>

        </nav>

        <aside class="left-off-canvas-menu">
            <ul class="off-canvas-list">
                <li><a href="#">Left Sidebar</a></li>
            </ul>
        </aside>

        <aside class="right-off-canvas-menu">
            <ul class="off-canvas-list">
               
               <li><a href="#">Lists for {{users.name}}</a></li>
              
              <li ng-repeat="list in lists track by $index"><a class="button" ng-href="lists/{{list.id}}">{{list.name}}</a>
              </li>
              <li><a>{{users.email}}</a></li>
              
              
            </ul>
        </aside>

        <section class="main-section">
            

               <div class="small-8 columns">

                  <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-3">

                      <li ng-repeat="product in products">            
                        <div class="thumbnail" ng-mouseenter="testHover();">
                          <div class="caption">
                            <p>{{product.name}}</p>
                            <div class="small-8 columns"><select ng-model="currentList" ng-options="list.name for list in lists"></select></div>
                            <button class="button radius tiny" ng-click="saveProduct(product, currentList);">Save</button>
                             
                            <h5><center><a ng-href="{{product.clickUrl}}" >Go</a></center></h5>                 
                          </div>
                          <img ng-src="{{product.image.sizes.IPhone.url}}" >
                        </div>
                      </li>

                  </ul>

                </div>
                
               <div class="small-4 columns" style="background-color: #999">



                <h1>Lists</h1>

                <form ng-submit="saveList();">
                  
                  Name: <input ng-model="newList.name" name="quantity">
                  <input type="submit" value="Add New List!">
                </form>

              <accordion close-others="oneAtATime">
                
                  
                    <accordion-group heading="{{list.name}}" ng-repeat="list in lists">
                    
                      <div ng-repeat="product in list.products">
                          <div>
                            <h5>{{product.name}}</h5>
                            <img ng-src="{{product.image_url}}">
                            <h5><center><a ng-href="{{product.url}}" >Go</a></center></h5>
                            <p>Price: {{product.price}}</p>   
                            <p>Sale Price: {{product.sale_price}}</p>
                            <!-- <div ng-click="deleteProduct($parent.$index,$index);" class="button radius tiny">Remove from list</div>        -->
                            
                          </div>
                       
                        
                      </div>
                      <div class="button radius small" ng-click="deleteList(list)">Delete this list</div>

                    </accordion-group>
                  
                
              </accordion>



               </div>

            
            
        </section>

        <a class="exit-off-canvas"></a>
    </div>
</div>


<div class="row">
        <div class="col-md-3">            
            <div class="thumbnail">
                <div class="caption">
                    <h4>Thumbnail Headline</h4>
                    <p>short thumbnail description</p>
                    <p><a href="" class="label label-danger" rel="tooltip" title="Zoom">Zoom</a>
                    <a href="" class="label label-default" rel="tooltip" title="Download now">Download</a></p>
                </div>
                <img src="http://lorempixel.com/400/300/sports/4/" alt="...">
            </div>
      </div>        
    </div>